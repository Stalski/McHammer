/**
 * Implements hook_ctools_plugin_directory().
 */
function mchammer_ctools_plugin_directory($module, $plugin) {
  if ($module == 'ctools' && ($plugin == 'export_ui' || $plugin == 'layouts')) {
    return "plugins/$plugin";
  }
  elseif ($module == 'panels' && !empty($plugin)) {
    return "plugins/$plugin";
  }
}

