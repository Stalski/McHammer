  $return['mail_template'] = array(
    'label' => t('Mail template'),
    'label callback' => 'entity_class_label',
    'entity class' => 'MailTemplateEntity',
    'controller class' => 'MailTemplateEntityController',
    'base table' => 'mchammer_mail_templates',
    'fieldable' => FALSE,
    'entity keys' => array(
      'id' => 'mtid',
      'title' => 'title',
    ),
